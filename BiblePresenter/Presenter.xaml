<Window x:Class="BiblePresenter.Presenter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Presenter"
        WindowState="Maximized" WindowStyle="None"
        Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="txt_verseRef"
                   Grid.Row="0"
                   Background="Black" Foreground="LightGray" FontSize="44" FontWeight="Bold"
                   TextAlignment="Center"
                   VerticalAlignment="Bottom"
                   Width="1200" TextWrapping="Wrap"/>
        <TextBlock Name="txt_verseBlock"
                   Grid.Row="1"
                   Background="Black" Foreground="White" FontSize="72"
                   TextAlignment="Center"
                   VerticalAlignment="Top"
                   Width="1200" TextWrapping="Wrap">
        </TextBlock>
    </Grid>
</Window>
